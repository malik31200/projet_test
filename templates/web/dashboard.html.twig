{% extends 'base.html.twig' %}

{% block title %}Mon espace - Actual Sport{% endblock %}

{% block body %}
    <h1 class="page-title">üë§ Mon espace</h1>

    {# Mes r√©servations de sessions #}
    <div class="dashboard-section">
        <h2 class="section-title">üìÖ Mes r√©servations</h2>
        {% if registrations is empty %}
            <div class="card">
                <p class="text-muted">Vous n'avez aucune r√©servation pour le moment.</p>
                <a href="{{ path('app_sessions') }}" class="btn">R√©server une session</a>
            </div>
        {% else %}
            <div class="grid">
                {% for registration in registrations %}
                    <div class="card">
                        <div class="flex-between">
                            <h3>{{ registration.session.course.name }}</h3>
                            <span class="badge badge-{{ registration.status }}">
                                {{ registration.status }}
                            </span>
                        </div>
                        
                        <div class="session-details">
                            <div class="detail-item">
                                <span class="detail-label">üìÖ Date</span>
                                <strong>{{ registration.session.startTime|date('d/m/Y') }}</strong>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">üïê Horaire</span>
                                <strong>{{ registration.session.startTime|date('H:i') }} - {{ registration.session.endTime|date('H:i') }}</strong>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">üìù Inscrit le</span>
                                <span>{{ registration.registeredAt|date('d/m/Y') }}</span>
                            </div>
                            {% if registration.sessionBook %}
                                <div class="detail-item">
                                    <span class="detail-label">üé´ Pay√© avec</span>
                                    <span>{{ registration.sessionBook.name }}</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Mes carnets de s√©ances #}
    <div class="dashboard-section">
        <h2 class="section-title">üé´ Mes carnets de s√©ances</h2>
        {% if sessionBooks is empty %}
            <div class="card">
                <p class="text-muted">Vous n'avez aucun carnet de s√©ances.</p>
                <a href="#" class="btn">Acheter un carnet</a>
            </div>
        {% else %}
            <div class="grid">
                {% for book in sessionBooks %}
                    <div class="card">
                        <h3>{{ book.name }}</h3>
                        <div class="book-info">
                            <div class="remaining-sessions">
                                <div class="remaining-number">{{ book.remainingSessions }}</div>
                                <div class="remaining-label">s√©ances restantes</div>
                            </div>
                            <div class="book-details">
                                <p><strong>Total :</strong> {{ book.totalSessions }} s√©ances</p>
                                <p><strong>Prix :</strong> {{ book.price }} ‚Ç¨</p>
                                {% if book.expiresAt %}
                                    <p><strong>Expire le :</strong> {{ book.expiresAt|date('d/m/Y') }}</p>
                                {% endif %}
                                <p class="text-muted">Achet√© le {{ book.createdAt|date('d/m/Y') }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Mes paiements #}
    <div class="dashboard-section">
        <h2 class="section-title">üí∞ Historique des paiements</h2>
        {% if payments is empty %}
            <div class="card">
                <p class="text-muted">Aucun paiement enregistr√©.</p>
            </div>
        {% else %}
            <div class="card">
                <table class="payment-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Montant</th>
                            <th>M√©thode</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for payment in payments %}
                            <tr>
                                <td>{{ payment.createdAt|date('d/m/Y H:i') }}</td>
                                <td><strong>{{ payment.amount }} ‚Ç¨</strong></td>
                                <td>{{ payment.paymentMethod }}</td>
                                <td>
                                    <span class="badge badge-{{ payment.status }}">
                                        {{ payment.status }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}