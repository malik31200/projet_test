{% extends 'base.html.twig' %}

{% block title %} Sessions disponibles - Actual Sport {% endblock %}

{% block body %}
    <h1 class="page-title">üìÖ Sessions disponibles</h1>

{% if sessions is empty %}
    <div class="card">
    <p>Aucune session disponible pour le moment.</p>
    </div>
{% else %}
    {% for session in sessions %}
        <div class="card">
            <div class="flex-between">
                <div>
                    <h3>{{ session.course.name }}</h3>
                    <p class="text-muted">{{ session.course.description }}</p>
                </div>
                <div class="badge-spots">
                    <div class="spots-number">{{ session.availableSpots }}</div>
                    <div class="spots-label">Places restantes</div>
                </div>
            </div>

            <div class="session-info">
                <div class="session-info-item">
                    <div class="info-label">üìÖ Date</div>
                    <strong>{{ session.startTime|date('d/m/Y') }}</strong>
                </div>
                <div class="session-info-item">
                    <div class="info-label">üïê Horaire</div>
                    <strong>{{ session.startTime|date('H:i') }} - {{ session.endTime|date('H:i') }}</strong>
                </div>
                <div class="session-info-item">
                    <div class="info-label">‚è±Ô∏è Dur√©e</div>
                    <strong>{{ session.course.duration }} min</strong>
                </div>
                <div class="session-info-item">
                    <div class="info-label">üí∞ Prix</div>
                    <strong>{{ session.course.price }} ‚Ç¨</strong> 
                </div>    
            </div>

            {% if app.user %}
                {% if session.availableSpots > 0 %}

                    <form method="POST" action="{{ path('app_session_book', {id: session.id}) }}" style="margin: 0;">
                        <button type="submit" class="btn btn-full">
                            R√©server cette session
                        </button>
                    </form>
                {% else %}
                    <button class="btn btn-secondary btn-full" disabled>
                        Complet
                    </button>
                {% endif %}
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-secondary btn-full">
                    Connectez-vous pour r√©server
                </a>
            {% endif %}
        </div>
    {% endfor %}
{% endif %}
{% endblock %}